<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/book.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (books.length > 0) { %>
            <div class="grid">
                <% for (let book of books) { %>
                    <article>
                        <div>
                            <header>
                                <h1><%= book.title %></h1>
                            </header>
                            <h2>Summary</h2>
                            <p><%= book.summary %></p>
                            <h2>Author</h2>
                            <p><%= book.author %></p>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No books Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>